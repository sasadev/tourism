            <% objects.each do |object| %>
                <li class="<%= controller_name == object ? 'active' : '' %>">
                  <%= link_to polymorphic_path([:admin, object]) do %>
                      <i class="fa fa-circle-o"></i> <%= t("views.admin.#{object}.title") %>

<div class="box box-default">
  <%= nested_form_for @query, as: :query, url: admin_contents_path, method: :get do |f| %>
      <div class="box-header with-border">
        <h3 class="box-title"><%= @contents.total_count %> 件</h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
        </div>
      </div>
      <div class="box-body" style="">
        <div class="row">
          <div class="col-md-6 col-12">
            <div class="form-group row">
              <label for="example-search-input" class="col-sm-3 col-form-label"><%= Content.human_attribute_name :title %></label>
              <div class="col-sm-9">
                <%= f.text_field :title, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-12">
            <div class="form-group row">
              <label for="example-search-input" class="col-sm-3 col-form-label"><%= Content.human_attribute_name :category_id %></label>
              <div class="col-sm-9">
                <%= f.select :category_id, Category.alive_records.pluck(:title, :id), {include_blank: true}, class: 'form-control' %>
              </div>
            </div>
          </div>
        </div>
        <div class="pull-right">
          <div class="box-header">
            <%= link_to '新規作成', new_admin_content_path, class: 'btn btn-primary btn-lg' %>

            <%= f.submit '検索', class: 'btn btn-primary btn-lg bg-olive' %>
          </div>
        </div>
      </div>
  <% end %>
</div>
<%= nested_form_for [:admin, @admin_user] do |f| %>

      <!-- Basic Forms -->
      <div class="box box-default">
        <div class="box-header with-border">
          <h3 class="box-title"></h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <div class="row">
            <div class="col-12">
              <div class="form-group row">
                <label for="example-search-input" class="col-sm-2 col-form-label"><%= AdminUser.human_attribute_name :name %></label>
                <div class="col-sm-10 <%= 'has-danger' if @admin_user.errors[:name].present? %>">
                  <%= f.text_field :name, class: 'form-control' %>
                  <p style="color: red;"><%= @admin_user.error_messages_for :name %></p>
                </div>
              </div>
              <div class="form-group row">
                <label for="example-search-input" class="col-sm-2 col-form-label"><%= AdminUser.human_attribute_name :email %></label>
                <div class="col-sm-10 <%= 'has-danger' if @admin_user.errors[:email].present? %>">
                  <%= f.email_field :email, class: 'form-control' %>
                  <p style="color: red;"><%= @admin_user.error_messages_for :email %></p>
                </div>
              </div>
              <div class="form-group row">
                <label for="example-url-input" class="col-sm-2 col-form-label"><%= f.label AdminUser.human_attribute_name :password %></label>
                <div class="col-sm-10 <%= 'has-danger' if @admin_user.errors[:password].present? %>">
                  <%= f.password_field :password, class: 'form-control' %>
                  <p style="color: red;"><%= @admin_user.error_messages_for :password %></p>
                </div>
              </div>
              <div class="form-group row">
                <label for="example-tel-input" class="col-sm-2 col-form-label"><%= f.label AdminUser.human_attribute_name :password_confirmation %></label>
                <div class="col-sm-10 <%= 'has-danger' if @admin_user.errors[:password_confirmation].present? %>">
                  <%= f.password_field :password_confirmation, class: 'form-control' %>
                  <p style="color: red;"><%= @admin_user.error_messages_for :password_confirmation %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="pull-right">
            <%= link_to raw('<i class="fa fa-indent"></i> 一覧'), admin_admin_users_path, class: 'btn btn-app bg-blue' %>
            <%= button_tag type: 'submit', class: 'btn btn-app bg-olive' do %>
                <i class="fa fa-save"></i> 登録
            <% end %>
          </div>
        </div>
      </div>

<% end %>


